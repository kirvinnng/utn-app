<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.UTNApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="colorPrimary">@color/black_500</item>
        <item name="colorPrimaryVariant">@color/black_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black_700</item>
        <item name="android:navigationBarColor">@color/black_700</item>

        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimaryDark">@color/black_700</item>
        <item name="android:background">@color/white</item>
        <item name="android:navigationBarColor">@color/black_700</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="InputType">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:ems">10</item>
    </style>

    <style name="ErrorStyle">
        <item name="android:fontFamily">@font/opensans_italic</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="Black200" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/black_200</item>
    </style>
</resources>