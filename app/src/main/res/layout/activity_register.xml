<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/registration"
        android:fontFamily="@font/opensans_bold"
        android:textSize="32sp"
        android:textColor="@color/black_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backToLogin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back"
        tools:ignore="RedundantDescriptionCheck" />

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:height="48dp"
        android:autofillHints="name"
        android:ems="10"
        android:fontFamily="@font/opensans_regular"
        android:hint="@string/name"
        android:inputType="text"
        android:maxLength="@integer/name_length"
        android:minHeight="48dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration"
        android:drawableStart="@drawable/user"
        android:drawablePadding="8dp"
        android:background="@drawable/custom_input" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:height="48dp"
        android:autofillHints="emailAddress"
        android:ems="10"
        android:fontFamily="@font/opensans_regular"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:maxLength="@integer/email_length"
        android:minHeight="48dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:drawableStart="@drawable/email"
        android:drawablePadding="8dp"
        android:background="@drawable/custom_input" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:id="@+id/passwordLinearLayout"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:background="@drawable/custom_input"
        android:focusable="false">

        <EditText
            android:id="@+id/password"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:height="48dp"
            android:autofillHints="password"
            android:ems="10"
            android:fontFamily="@font/opensans_regular"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="@integer/password_length"
            android:textColor="@color/text"
            android:textColorHint="@color/hint"
            android:drawableStart="@drawable/key"
            android:drawablePadding="8dp"
            android:background="@drawable/transparent" />

        <ImageView
            android:id="@+id/viewPassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eye"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:contentDescription="@string/see_password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordLinearLayout"
        android:id="@+id/confirmPasswordLinearLayout"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:background="@drawable/custom_input"
        android:focusable="false">

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:height="48dp"
            android:autofillHints="password"
            android:ems="10"
            android:fontFamily="@font/opensans_regular"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="@integer/password_length"
            android:textColor="@color/text"
            android:textColorHint="@color/hint"
            android:drawableStart="@drawable/key"
            android:drawablePadding="8dp"
            android:background="@drawable/transparent" />

        <ImageView
            android:id="@+id/viewConfirmPassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eye"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:contentDescription="@string/see_password" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:ems="10"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/register_btn"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordLinearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register">

        <TextView
            android:id="@+id/alreadyHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/already_have_account"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/logInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/log_in"
            android:textColor="@color/link"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>