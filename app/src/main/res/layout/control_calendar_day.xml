<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="48dp"
    android:layout_width="48dp">

    <ImageView
        android:id="@+id/calendar_exam"
        android:contentDescription="@string/calendar_exam_ic"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:visibility="invisible"
        android:src="@drawable/ic_exam" />

    <ImageView
        android:id="@+id/calendar_activity"
        android:contentDescription="@string/calendar_activity_ic"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:visibility="invisible"
        android:src="@drawable/ic_activity" />

    <ImageView
        android:id="@+id/calendar_holiday"
        android:contentDescription="@string/calendar_holiday_ic"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:visibility="invisible"
        android:src="@drawable/ic_holiday" />

    <ImageView
        android:id="@+id/calendar_now"
        android:contentDescription="@string/calendar_now_ic"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:visibility="invisible"
        android:src="@drawable/ic_now" />

    <TextView
        android:id="@+id/calendar_date_display"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:minHeight="48dp"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textAlignment="center" />

</RelativeLayout>